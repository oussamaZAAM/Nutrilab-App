<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/main_color" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>